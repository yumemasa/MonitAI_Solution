<ui:FluentWindow x:Class="MonitAI.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:pages="clr-namespace:MonitAI.UI.Pages" 
    mc:Ignorable="d"
    Title="monitAI" Height="750" Width="1000"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="monitAI">
            <ui:TitleBar.TrailingContent>
                <ui:Button Icon="{ui:SymbolIcon DarkTheme24}" Click="OnToggleThemeClick" Appearance="Transparent" Margin="0,0,10,0"/>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>

        <ui:NavigationView x:Name="RootNavigation" Grid.Row="1" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="ホーム" Icon="{ui:SymbolIcon Home24}" TargetPageType="{x:Type pages:Pattern1Page}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="設定" Icon="{ui:SymbolIcon Settings24}" TargetPageType="{x:Type pages:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>

            <ui:NavigationView.Content>
                <Frame x:Name="RootFrame" NavigationUIVisibility="Hidden"/>
            </ui:NavigationView.Content>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>