<Page x:Class="MonitAI.UI.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="SettingsPage">

    <Grid Margin="30">
        <StackPanel Spacing="20">
            <TextBlock Text="設定" FontSize="28" FontWeight="Bold" />

            <ui:CardExpander Header="Gemini API設定" IsExpanded="True" Icon="{ui:SymbolIcon Key24}">
                <StackPanel Spacing="10">
                    <TextBlock Text="API Key:" />
                    <PasswordBox x:Name="ApiKeyBox" />
                    <Button Content="保存" Click="SaveButton_Click" />
                </StackPanel>
            </ui:CardExpander>
        </StackPanel>
    </Grid>
</Page>